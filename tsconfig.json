{
  "compilerOptions": {
    "target": "esnext",
    "watch": true,
    "isolatedModules": true,
    "lib": [
      "dom",
      "ES2017"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src",
    "firebase.config.js"
  ]
}
